 <%= form_for message, url: interested_path, class: "form-horizontal" do |f| %>
    <fieldset>
    <div class="form-group">
      <%# f.label :name, "Nombre" , class: "col-lg-2 control-label"%>
      <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
      <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
      </div>
    </div>

    <div class="form-group">
      <%# f.label :email , class: "col-lg-2 control-label" %>
      <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
        <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
      </div>
    </div>

    <div class="form-group">
      <%# f.label :ideas, "Cuál es tu idea?", class: "col-lg-2 control-label" %>
      <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
        <%= f.text_area :ideas , class: "form-control", rows: "3", placeholder: "Tell me your idea and I'll tell you how we could make it happen" %>
      </div>
    </div>

    <div class="form-group">
      <%# f.label :body, "Principal interés" , class: "col-lg-2 control-label" %>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "Tell me more about you. Share with me your social profiles(twitter, linkedin, github)" %>
        
      </div>
    </div>
  
    <div class="form-group">
      <div class="centered">
        <%= f.submit "SEND", class: "btn btn-lg btn-info" %>
      </div>
    </div>
  </fieldset>
<% end %>