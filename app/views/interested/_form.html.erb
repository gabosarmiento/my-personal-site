 <%= form_for message, url: interested_path, class: "form-horizontal" do |f| %>
    <fieldset>
      <div class="form-group">
        <%# f.label :email , class: "col-lg-2 control-label" %>
        <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
          <%= f.email_field :email, class: "form-control", placeholder: "Leave here your Email" %>
        </div>
      </div>
      <div class="form-group">
        <%# f.label :name, "Nombre" , class: "col-lg-2 control-label"%>
        <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
        <%= f.text_field :name, class: "form-control", placeholder: "and your name" %>
        </div>
      </div>

      <div class="form-group">
        <%# f.label :ideas, "Cuál es tu idea?", class: "col-lg-2 control-label" %>
        <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
          <%= f.text_area :ideas , class: "form-control", rows: "3", placeholder: "What's your idea?" %>
        </div>
      </div>

      <div class="form-group">
        <%# f.label :body, "Principal interés" , class: "col-lg-2 control-label" %>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "and finally what's your motivation?" %>

        </div>
      </div>

    <div class="form-group">
      <div class="centered">
        <%= f.submit "SEND", class: "btn btn-lg btn-info" %>
      </div>
    </div>
  </fieldset>
<% end %>
